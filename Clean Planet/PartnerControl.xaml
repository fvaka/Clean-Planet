<UserControl x:Class="Clean_Planet.PartnerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clean_Planet"
             mc:Ignorable="d" Margin="0,10,0,10" Height="169" Width="393" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,0" Background="LightCyan" ScrollViewer.CanContentScroll="True" >
        <Grid Margin="0,9,9,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="151*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="ratingLB" Content="Label" HorizontalAlignment="Left" Margin="9,113,0,0" VerticalAlignment="Top" Grid.Column="1" FontFamily="Franklin Gothic Medium"/>
            <Label x:Name="phoneLB" Content="Label" HorizontalAlignment="Left" Margin="9,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.876,0.748" Grid.Column="1" FontFamily="Franklin Gothic Medium"/>
            <Label x:Name="directorLB" Content="Label" HorizontalAlignment="Left" Margin="9,51,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="181" Grid.ColumnSpan="2" FontFamily="Franklin Gothic Medium"/>
            <Label x:Name="partnerNameLB" Content="Label" HorizontalAlignment="Left" Margin="147,11,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2" FontFamily="Franklin Gothic Medium"/>
            <Label x:Name="typeLB" Content="Label" HorizontalAlignment="Left" Margin="9,11,0,0" VerticalAlignment="Top" Grid.Column="1" FontFamily="Franklin Gothic Medium"/>
            <Label Content="|" HorizontalAlignment="Left" Margin="103,11,0,0" VerticalAlignment="Top" Grid.Column="1" FontFamily="Franklin Gothic Medium"/>
        </Grid>
    </Border>

</UserControl>
